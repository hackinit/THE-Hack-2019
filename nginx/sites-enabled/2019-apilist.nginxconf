server {
    listen 80;
    listen [::]:80;
    server_name apilist.thehack.org.cn;
    # Permanent redirect to https
    return 301 https://apilist.thehack.org.cn$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name apilist.thehack.org.cn;

    index index.html;

    # ssl settings and certificates
    include ssl/thehack.org.cn.nginxconf;
    include ssl/ssl.nginxconf;

    location / {
        alias /usr/share/apilist/2019/;
    }
}
